{
  "compilerOptions": {
    "esModuleInterop": true,
    "skipLibCheck": true,
    "lib": ["es2022"],
    "target": "es2022",
    "allowJs": true,
    "resolveJsonModule": true,
    "moduleDetection": "force",
    "isolatedModules": true,
    "verbatimModuleSyntax": true,

    "strict": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitOverride": true,

    "module": "NodeNext",
    "outDir": "dist",
    "rootDir": "src",
    "sourceMap": true,

    "declaration": true,

    "declarationMap": true
  },
  "include": ["src/**/*"],
  "exclude": ["tests"]
}
