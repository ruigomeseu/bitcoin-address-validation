    "chai": "^4.3.0",
    "codecov": "^3.8.1",
    "jest": "^26.6.3",
    "mocha": "^8.3.0",
    "nyc": "^15.0.1",
    "prettier": "^2.2.1",
    "rimraf": "^3.0.2",
    "rollup": "^2.39.0",
